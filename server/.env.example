# Byfrost Coordination Server - Environment Configuration
# Copy to .env and adjust values for your environment.

# Application
DEBUG=true

# Database (matches docker-compose.yml defaults)
DATABASE_URL=postgresql+asyncpg://byfrost:byfrost@localhost:5433/byfrost

# Redis (matches docker-compose.yml defaults)
REDIS_URL=redis://localhost:6379/0

# CORS (JSON list of allowed origins)
CORS_ORIGINS=["http://localhost:3000"]

# Server
HOST=0.0.0.0
PORT=8000

